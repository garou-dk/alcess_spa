{
    "compilerOptions": {
        "baseUrl": "./",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "types": ["vite/client"]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.vue",
        "resources/js/types/vue-global.d.ts"
    ]
}
